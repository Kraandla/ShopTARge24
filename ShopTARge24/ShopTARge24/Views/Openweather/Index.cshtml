@model ShopTARge24.Models.OpenWeather.OpenWeatherSearchViewModel

<h1>Search City</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the foreacast in a city</h2>
                <label asp-for="City" style="font: Arial"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="openWeather" asp-action="searchCity" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>