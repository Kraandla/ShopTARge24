@model ShopTARge24.Models.AccuWeathers.AccuWeathersSearchViewModel

<h1>Search city</h1>
<div class="container">
    <form method="post">

        <div class="form-group col-md-offfset-3 col-md-5">
            <h2>Search the forecast in a city</h2>
            <label asp-for="CityName" style="font: Arial"></label>
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>

        <div class="container">
            <div class="form-group coloffset-md-3 col-md-5">
                <button 
                    asp-controller="accuWeathers" 
                    asp-action="searchCity" 
                    class="btn btn-primary">
                    Search</button>
            </div>
        </div>

    </form>
</div>