@model ShopTARge24.Models.Spaceships.SpaceshipCreateUpdateViewModel

<div class="container py-4">
    <h1 class="mb-4 text-center text-gradient">
        @(Model.Id.HasValue ? "Update Spaceship" : "Create Spaceship")
    </h1>

    <form method="post" enctype="multipart/form-data" class="card p-4 shadow-lg" style="border-radius: 1rem; background: linear-gradient(135deg, #f0f8ff, #e0f7fa);">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="mb-3 row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Classification" class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-10">
                <input asp-for="Classification" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="BuiltDate" class="col-sm-2 col-form-label">Built Date</label>
            <div class="col-sm-10">
                <input asp-for="BuiltDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Crew" class="col-sm-2 col-form-label">Crew</label>
            <div class="col-sm-10">
                <input asp-for="Crew" type="number" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="EnginePower" class="col-sm-2 col-form-label">Engine Power</label>
            <div class="col-sm-10">
                <input asp-for="EnginePower" class="form-control" />
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Files" class="col-sm-2 col-form-label">Images</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Files" multiple type="file" />
            </div>
        </div>

        @if (Model.Image != null && Model.Image.Any())
        {
            <div class="mb-3">
                <h5>Existing Images:</h5>
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var img in Model.Image)
                    {
                        <div class="text-center">
                            <partial name="_Images" model="img" />
                            <form method="post" asp-controller="Spaceships" asp-action="removeImage" class="mt-1">
                                <input type="hidden" name="imageId" value="@img.ImageId" />
                                <button type="submit" class="btn btn-sm btn-gradient-danger w-100">Remove</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="d-flex gap-2 justify-content-center mt-4 flex-wrap">
            <button type="submit" class="btn btn-gradient-success">
                @(Model.Id.HasValue ? "Update" : "Create")
            </button>
            <a asp-action="Index" asp-controller="Spaceships" class="btn btn-gradient-primary">Back</a>
        </div>
    </form>
</div>

<style>
    .btn-gradient-success {
        background: linear-gradient(135deg, #10b981, #14b8a6);
        color: #fff;
        border: none;
        transition: transform 0.2s, opacity 0.2s;
    }

        .btn-gradient-success:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #3b82f6, #6366f1);
        color: #fff;
        border: none;
    }

        .btn-gradient-primary:hover {
            opacity: 0.9;
        }

    .btn-gradient-danger {
        background: linear-gradient(135deg, #ec4899, #f43f5e);
        color: #fff;
        border: none;
    }

        .btn-gradient-danger:hover {
            opacity: 0.9;
        }

    .text-gradient {
        background: linear-gradient(90deg, #f97316, #facc15);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .row {
        color: #f97316;
    }

    .h4 {
        color: #f97316;
    }
</style>
