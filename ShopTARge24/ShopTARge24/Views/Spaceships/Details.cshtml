@model ShopTARge24.Models.Spaceships.SpaceshipDetailsViewModel

<div class="container py-4">
    <h1 class="text-center text-gradient mb-4">Spaceship Details</h1>

    <div class="card p-4 shadow-lg" style="border-radius: 1rem; background: linear-gradient(135deg, #f0f8ff, #e0f7fa);">

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">ID:</div>
            <div class="col-sm-9">@Model.Id</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Name:</div>
            <div class="col-sm-9">@Model.Name</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Type:</div>
            <div class="col-sm-9">@Model.Classification</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Built Date:</div>
            <div class="col-sm-9">@Model.BuiltDate?.ToShortDateString()</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Crew:</div>
            <div class="col-sm-9">@Model.Crew</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Engine Power:</div>
            <div class="col-sm-9">@Model.EnginePower</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Created At:</div>
            <div class="col-sm-9">@Model.CreatedAt</div>
        </div>

        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Modified At:</div>
            <div class="col-sm-9">@Model.ModifiedAt)</div>
        </div>

        @if (Model.Images != null && Model.Images.Any())
        {
            <h5 class="mt-3 mb-2">Images:</h5>
            <div class="d-flex flex-wrap gap-3 mb-3">
                @foreach (var img in Model.Images)
                {
                    <partial name="_Images" model="img" />
                }
            </div>
        }

        <hr />
        <div class="d-flex justify-content-center gap-2 flex-wrap">
            <a asp-action="Index" asp-controller="Spaceships" class="btn btn-gradient-primary">Back</a>
        </div>
    </div>
</div>

<style>
    .btn-gradient-primary {
        background: linear-gradient(135deg, #3b82f6, #6366f1);
        color: #fff;
        border: none;
        transition: transform 0.2s, opacity 0.2s;
    }

        .btn-gradient-primary:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

    .text-gradient {
        background: linear-gradient(90deg, #f97316, #facc15);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .row{
        color: #f97316;
    }
    .h4 {
        color: #f97316;
    }
</style>
