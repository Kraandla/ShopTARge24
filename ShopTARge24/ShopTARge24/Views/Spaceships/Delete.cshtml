@model ShopTARge24.Models.Spaceships.SpaceshipDeleteViewModel

<div class="container py-4">
    <h1 class="text-center text-gradient mb-4">Delete Spaceship</h1>

    <div class="card p-4 shadow-lg" style="border-radius: 1rem; background: linear-gradient(135deg, #fff0f5, #ffe4e1);">
        <h4 class="mb-3" style="color: #f97316;">Spaceship Details</h4>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">ID:</div>
            <div class="col-sm-9">@Model.Id</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Name:</div>
            <div class="col-sm-9">@Model.Name</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Type:</div>
            <div class="col-sm-9">@Model.Classification</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Built Date:</div>
            <div class="col-sm-9">@Model.BuiltDate?.ToShortDateString()</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Crew:</div>
            <div class="col-sm-9">@Model.Crew</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Engine Power:</div>
            <div class="col-sm-9">@Model.EnginePower</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Created At:</div>
            <div class="col-sm-9">@Model.CreatedAt</div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-3 fw-bold">Modified At:</div>
            <div class="col-sm-9">@Model.ModifiedAt</div>
        </div>

        @if (Model.ImageViewModels != null && Model.ImageViewModels.Any())
        {
            <h5 class="mt-3 mb-2">Images:</h5>
            <div class="d-flex flex-wrap gap-3 mb-3">
                @foreach (var img in Model.ImageViewModels)
                {
                    <partial name="_Images" model="img" />
                }
            </div>
        }

        <hr />
        <form asp-action="DeleteConfirmation" class="d-flex gap-2 justify-content-center flex-wrap">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-gradient-danger">Delete</button>
            <a asp-action="Index" asp-controller="Spaceships" class="btn btn-gradient-success">Back</a>
        </form>
    </div>
</div>

<style>
    .btn-gradient-danger {
        background: linear-gradient(135deg, #ec4899, #f43f5e);
        color: #fff;
        border: none;
        transition: transform 0.2s, opacity 0.2s;
    }

        .btn-gradient-danger:hover {
            transform: translateY(-2px);
            opacity: 0.9;
        }

    .btn-gradient-success {
        background: linear-gradient(135deg, #10b981, #14b8a6);
        color: #fff;
        border: none;
    }

        .btn-gradient-success:hover {
            opacity: 0.9;
        }

    .text-gradient {
        background: linear-gradient(90deg, #f97316, #facc15);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .row {
        color: #f97316;
    }
</style>
